<Window
    x:Class="_02_02_DrawDetailBeam_Detail2D.MVVM.View.vMainDrawDetailBeam"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_02_02_DrawDetailBeam_Detail2D.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="DetailBeam2D"
    Title="Vẽ mặt cắt dầm"
    Width="1400"
    Height="700"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/00_00_DHHShareLibrary;component/Themes/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="200"/>
            <RowDefinition Height="52" />
        </Grid.RowDefinitions>
        <TabControl TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Height" 
                            Value="{Binding Height, 
                                    RelativeSource={RelativeSource FindAncestor, 
                                    AncestorType={x:Type TabControl}}}"/>
                </Style>
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header >
                    <StackPanel HorizontalAlignment="Left" 
                                Orientation="Horizontal">
                        <TextBlock
                            FontStyle="Normal"
                            FontWeight="DemiBold"
                            Text="Vẽ nhanh" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem >
                <TabItem.Header>
                    <StackPanel HorizontalAlignment="Left" 
                                Orientation="Horizontal">
                        <TextBlock
                            FontStyle="Normal"
                            FontWeight="DemiBold"
                            Text="Vẽ chi tiết"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
        <Canvas x:Name="viewCanvas"
            Background="WhiteSmoke"
            Grid.Row="1" Margin="5">
        </Canvas>
        <DockPanel Grid.Row="2" LastChildFill="True" HorizontalAlignment="Right">
            <Button
                 Width="140" Height="40"
                Margin="3"
                Command="{Binding BtnChonDam}"
                CommandParameter="{Binding ElementName=DetailBeam2D}"
                Content="Chọn dầm" FontFamily="Arial"
                Style="{DynamicResource ButtonStyle}" />
            <Button
                 Width="140" Height="40"
                Margin="3"
                Command="{Binding BtnOK}"
                CommandParameter="{Binding ElementName=DetailBeam2D}"
                Content="Vẽ thép" FontFamily="Arial"
                Style="{DynamicResource ButtonStyle}" />
            <Button
                Width="140" Height="40"
                Margin="3"
                Command="{Binding BtnCancel}"
                CommandParameter="{Binding ElementName=DetailBeam2D}"
                Content="Hủy bỏ" FontFamily="Arial"
                Style="{DynamicResource ButtonStyle}" />
        </DockPanel>
    </Grid>
</Window>
 